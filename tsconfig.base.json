{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["apps/white-label-frontend/src/white-label-config.ts"],
      "@my-bands-sites/shared-types": ["libs/shared-types/src/index.ts"],
      "@my-bands-sites/ssr/config": ["libs/ssr/config/src/index.ts"],
      "@my-bands-sites/ssr/config/server": ["libs/ssr/config/src/server.ts"],
      "@my-bands-sites/white-label-config": [
        "libs/white-label-config/src/index.ts"
      ],
      "@my-bands-sites/white-label-config/server": [
        "libs/white-label-config/src/server.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
